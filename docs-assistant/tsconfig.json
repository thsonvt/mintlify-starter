{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "@docs-assistant/core": ["./packages/core/src/index.ts"],
      "@docs-assistant/core/*": ["./packages/core/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
